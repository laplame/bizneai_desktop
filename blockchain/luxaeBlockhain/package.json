    "test": "node index.js",
    "monitor": "node src/scripts/monitor-network.js",
    "node-info": "node scripts/get-node-info.js",
    "deploy:genesis": "node scripts/deploy-genesis.js",
    "dev": "concurrently \"nodemon --watch src --ext js,json --exec 'node scripts/start-validator.js'\" \"nodemon --watch src --ext js,json --exec 'node scripts/start-api-v2.js'\" \"pnpm run dev:frontend\"",
    "dev:frontend": "cd frontend-luxae && npm run dev",
    "dev:dashboard": "cd dashboard && pnpm run dev",
    "dev:node": "nodemon --watch src --ext js,json --exec 'node scripts/start-validator.js'",
    "dev:api": "nodemon --watch src --ext js,json --exec 'node scripts/start-api-v2.js'",
    "dev:api-legacy": "nodemon --watch src --ext js,json --exec 'node scripts/start-api.js'"
  },
